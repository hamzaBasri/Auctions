@model IEnumerable<Auctions.Models.Listing>

@{
    ViewData["Title"] = "Index";
}

<style>
    .card-img-top {
        transition: transform 0.3s ease;
    }
    .card-img-top:hover {
        transform: scale(1.1);
    }
</style>

<h2>Active Listings</h2>

@if (Model.Any())
{
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="background-color: lightblue; border: 2px solid #007bff; border-radius: 15px;">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i += 4)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                        @foreach (var Listing in Model.Skip(i).Take(4))
                        {
                            <div class="col-md-3">
                                <div class="card h-100">
                                    <a asp-action="Details" asp-route-id="@Listing.Id">
                                        <img src="~/Images/@Listing.ImagePath" class="card-img-top" alt="...">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">@Listing.Title</h5>
                                        @* <p class="card-text">@Listing.Description</p> *@
                                        <p class="card-text"><strong>Price: </strong>@Listing.Price.ToString("N2") $</p>
                                        <p class="card-text"><strong>Listed by: </strong>@Listing.User.Email</p>
                                        <a asp-action="Details" asp-route-id="@Listing.Id" class="btn btn-primary">@Listing.Title</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev btn btn-sm" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev" style="background-color: blue; position: absolute; top: 50%; left: 0; transform: translateY(-50%); width: 30px; height: 30px; margin-left: 15px; z-index: 1;">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next btn btn-sm" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next" style="background-color: blue; position: absolute; top: 50%; right: 0; transform: translateY(-50%); width: 30px; height: 30px; margin-right: 15px; z-index: 1;">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br /> 
    <div class="list-group">
        @foreach (var Listing in Model)
        {
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-action="Details" asp-route-id="@Listing.Id">
                            <img src="~/Images/@Listing.ImagePath" class="img-fluid card-img-top" alt="...">
                        </a>
                    </div>
                    <div class="col-md-9">
                        <h5 class="mb-1">@Listing.Title</h5>
                        <p class="mb-1">@Listing.Description</p>
                        <p class="mb-1"><strong>Price: </strong>@Listing.Price.ToString("N2") $</p>
                        <p class="mb-1"><strong>Listed by: </strong>@Listing.User.Email</p>
                        <a asp-action="Details" asp-route-id="@Listing.Id" class="btn btn-primary">@Listing.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No active listings found.</p>
}
